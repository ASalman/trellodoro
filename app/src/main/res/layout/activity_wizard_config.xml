<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.ConfigWizardActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_wizard_universal_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context=".TabMediaActivity" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/icons"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:minWidth="80dp"
            android:text="{typcn-chevron-left-outline}"
            android:textColor="@color/icons"
            android:textSize="22sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/lbl_position"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/icons"
            android:textSize="18sp" />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:minWidth="80dp"
            android:text="{typcn-chevron-right-outline}"
            android:textColor="@color/icons"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>
